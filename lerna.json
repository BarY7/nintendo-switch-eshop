{
  "packages": [
    "packages/*"
  ],
  "version": "2.2.3",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "push": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "push": true,
      "message": "chore(release): publish %s"
    },
    "create": {
      "license": "Apache-2.0"
    }
  }
}
