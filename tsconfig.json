{
  "extends": "@favware/ts-config",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "./docs/",
    "readme": "./README.md",
    "name": "Nintendo Switch EShop",
    "exclude": [
      "src/index.ts"
    ],
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true
  }
}